<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".View.ChiTiet_activity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#fff">
        <ImageView
            android:id="@+id/img_back_home_6"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_button_back" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="308dp"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Chi tiết"
            android:textColor="@color/colorBlack"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="396dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/colorBlack"
            android:textSize="18dp"
            android:text="Chỉ cần 30 giây nạp tiền tại quầy của các cửa hàng Pasio. Bạn sẽ nhận được những ƯNG ĐÃI KHỦNG cho lần lần nạp đầu tiên:" />

        <TextView
            android:layout_marginLeft="10dp"
            android:textSize="15dp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:text="* 1 voucher giảm giá 50% sản phẩm Latte Nóng hoặc đá" />
        <TextView
            android:layout_marginLeft="10dp"
            android:textSize="15dp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:text="* Nhân đôi số điểm cho số tiền nạp vào app Pasio Coffee" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="10dp"
            android:textSize="18dp"
            android:text="Bạn có biết? Chỉ cần nạp và sử dụng hết 250.000đ"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="10dp"
            android:textSize="18dp"
            android:text="Bạn sẽ được thăng hạng lên Thành viên Silver với Ưu dãi giảm 5% tổng hhoas đơn và được tặng 50.000đ cho mỗi 50 điểm tích lũy tiếp theo trong tháng này!"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_chon_mon"
            android:layout_width="375dp"
            android:layout_height="194dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_ch_1"
            app:shapeAppearanceOverlay="@style/roundimageview" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thông tin chi tiết:"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#000"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:textSize="15dp"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:text="- Trong lần nạp đầu tiên vào app Pasio Coffee, khách hàng sẽ được tích điểm tương ứng với số tiền dã nạp vào và nhận 1 vouher ưu đãi" />
            <TextView
                android:layout_marginLeft="10dp"
                android:textSize="15dp"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:text="- Voucher có giá tri khi thanh toán hóa đơn bằng app Passio Coffee"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:textSize="15dp"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:text=" - Voucher không áp dụng đồ thời với chương trình khuyến mãi khác và giao hàng"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>