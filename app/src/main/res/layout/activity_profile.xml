<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".View.Profile_Activity"
    android:background="@drawable/ic_background5">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:orientation="vertical">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_back_home_3"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="16dp"
                        android:src="@drawable/ic_button_back" />

                    <ImageView
                        android:layout_width="159dp"
                        android:layout_height="159dp"
                        android:layout_row="0"
                        android:layout_column="1"
                        android:layout_marginLeft="70dp"
                        android:src="@drawable/ic_avatar_holder" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_row="2"
                        android:layout_column="1"
                        android:layout_marginLeft="95dp"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="15dp"
                        android:text="+84375163016"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_row="1"
                        android:layout_column="1"
                        android:layout_marginLeft="95dp"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="20dp"
                        android:text="Trần Võ Lập"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold" />

                </GridLayout>

                <GridLayout
                    android:layout_width="388dp"
                    android:layout_height="160dp"
                    android:layout_marginLeft="10dp"
                    android:background="#fff"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="250dp"
                        android:layout_height="30dp"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:text="Thành viên mới"
                        android:textColor="#000"
                        android:textSize="18dp" />

                    <TextView
                        android:layout_width="250dp"
                        android:layout_height="30dp"
                        android:layout_row="2"
                        android:layout_column="0"
                        android:layout_marginLeft="10dp"

                        android:text="0 điểm"
                        android:textColor="@android:color/holo_green_light"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="250dp"
                        android:layout_height="30dp"
                        android:layout_row="3"
                        android:layout_column="0"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:text="Tài khoản Passio point"
                        android:textColor="#000"
                        android:textSize="18dp" />

                    <TextView
                        android:layout_width="250dp"
                        android:layout_height="30dp"
                        android:layout_row="4"
                        android:layout_column="0"
                        android:layout_marginLeft="10dp"
                        android:text="0 P"
                        android:textColor="@android:color/holo_green_light"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/next2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_row="0"
                        android:layout_column="2"
                        android:layout_gravity="center"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/ic_next" />
                </GridLayout>


            </LinearLayout>

            <GridView
                android:id="@+id/grw_profile"
                android:layout_width="391dp"
                android:layout_height="267dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="#fff" />

            <LinearLayout
                android:layout_width="376dp"
                android:layout_height="68dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="#fff"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Holine: 19009434" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="2018 Passio Coffee. ver 1.07" />

                <TextView
                    android:id="@+id/dang_xuat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Đăng xuất"
                    android:textColor="@color/colorRed" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>

