<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Login.Login2_Activity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#fff">
        <ImageView
            android:id="@+id/img_back_user1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_button_back" />
        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorBlack"
            android:gravity="center"
            android:text="Nhập số điện thoại"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="656dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="vertical">



        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="Nhập số di động"
            android:textColor="@android:color/holo_green_light"
            android:textSize="20sp"
            android:textStyle="bold" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="109dp">

            <com.hbb20.CountryCodePicker
                android:id="@+id/ccp"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:background="@color/while2"
                android:gravity="center"
                android:textStyle="bold"
                app:ccpDialog_textColor="#C1BEBE"
                app:ccp_defaultLanguage="VIETNAMESE"
                app:ccp_defaultNameCode="VN"
                app:ccp_defaultPhoneCode="84"
                app:ccp_showNameCode="false"
                app:ccp_textSize="20dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginTop="7dp"
                android:id="@+id/R_edt_sdt"
                android:layout_width="239dp"
                android:layout_height="89dp"
                android:layout_gravity="center"
                app:counterEnabled="true"
                app:counterMaxLength="10"
                app:errorEnabled="true"
                app:hintEnabled="true"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/Edt_sdt"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/while2"
                    android:gravity="center"
                    android:inputType="phone"
                    android:maxLength="10"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold" />
            </com.google.android.material.textfield.TextInputLayout>
        </GridLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:textColor="@android:color/holo_green_light"
            android:text="Nhấn vào tiếp tục để xác minh số điện thoại của bạn. Chúng tối sẽ gửi SMS để xác minh số của bạn"
            android:textSize="19dp"
             />

        <Button
            android:id="@+id/bt_next2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@color/while2"
            android:text="Tiếp tục"
            android:textColor="@color/colorBlack"
            android:textSize="20sp" />




    </LinearLayout>


</LinearLayout>


